@model IEnumerable<PracticeForGit.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Department</a>
</p>

@if (Model == null || !Model.Any())
{
    <p>No departments found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Id</td>
                <td>@d.DeprtName</td>
                <td>@d.Description</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@d.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@d.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}