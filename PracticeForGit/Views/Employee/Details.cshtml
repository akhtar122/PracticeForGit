@model PracticeForGit.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2>@ViewData["Title"]</h2>

@if (Model == null)
{
    <p>Employee not found.</p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department?.DeprtName</dd>

        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary.ToString("C")</dd>
    </dl>

    <p>
        <a class="btn btn-secondary" asp-action="Index">Back to list</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </p>
}
